# =================================
# AI API 配置模板
# =================================
# 复制此文件为 .env 并填入实际的 API 密钥
# 注意：.env 文件不应提交到版本控制系统

# =================================
# MiniMax API 配置
# =================================
# 用途：语音转文字主服务商 + 文本再创作备用服务商
# 官网：https://www.minimaxi.com/
# 文档：https://api.minimax.chat/document/guides/chat
MINIMAX_API_KEY=your_minimax_api_key_here
MINIMAX_API_BASE_URL=https://api.minimax.chat
MINIMAX_GROUP_ID=your_minimax_group_id_here

# =================================
# 通义千问 API 配置 (阿里云)
# =================================
# 用途：文本再创作主服务商
# 官网：https://dashscope.aliyun.com/
# 文档：https://help.aliyun.com/zh/dashscope/
TONGYI_API_KEY=your_tongyi_api_key_here
TONGYI_API_BASE_URL=https://dashscope.aliyuncs.com
TONGYI_MODEL=qwen-turbo

# =================================
# 讯飞星火 API 配置
# =================================
# 用途：语音转文字备用服务商
# 官网：https://xinghuo.xfyun.cn/
# 文档：https://www.xfyun.cn/doc/asr/voicedictation/API.html
IFLYTEK_APP_ID=your_iflytek_app_id_here
IFLYTEK_API_SECRET=your_iflytek_api_secret_here
IFLYTEK_API_KEY=your_iflytek_api_key_here
IFLYTEK_API_BASE_URL=https://iat-api.xfyun.cn

# =================================
# 云猫转码 API 配置
# =================================
# 用途：视频转文字服务商（支持直接处理视频URL）
# 官网：https://yunmaovideo.com/
# 特点：支持多语言、对话模式、准确率高达98%
YUNMAO_API_KEY=your_yunmao_api_key_here
YUNMAO_API_SECRET=your_yunmao_api_secret_here
YUNMAO_API_BASE_URL=https://api.yunmaovideo.com/v1

# =================================
# 应用配置
# =================================
# 环境设置
NODE_ENV=development

# 日志级别 (debug, info, warn, error)
LOG_LEVEL=info

# API 超时时间 (毫秒)
API_TIMEOUT=30000

# 重试次数
MAX_RETRIES=3

# 重试延迟基数 (毫秒) - 指数退避
RETRY_DELAY_BASE=1000

# =================================
# 测试配置
# =================================
# 测试音频文件路径
TEST_AUDIO_30S_PATH=./test-data/audio-30s.mp3
TEST_AUDIO_45S_PATH=./test-data/audio-45s.mp3
TEST_AUDIO_60S_PATH=./test-data/audio-60s.mp3

# 测试文本样本
TEST_SCRIPT_SAMPLE="这是一个短视频脚本测试样本"

# =================================
# IP 诊断服务配置
# =================================
# 如果使用第三方 IP 诊断 API
IP_DIAGNOSIS_API_KEY=your_ip_diagnosis_api_key_here
IP_DIAGNOSIS_API_BASE_URL=your_ip_diagnosis_api_base_url_here