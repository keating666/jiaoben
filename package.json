{
  "name": "jiaoben",
  "version": "1.0.0",
  "description": "AI API 技术验证和集成项目",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build:api && npm run build:tech",
    "build:api": "echo 'API is JavaScript, no build needed'",
    "build:tech": "cd tech-validation && npm run build",
    "build:creator": "cd apps/creator-app && npm run build",
    "build:admin": "cd apps/admin-app && npm run build",
    "build:apps": "npm run build:creator && npm run build:admin",
    "dev": "vercel dev",
    "dev:creator": "cd apps/creator-app && npm run dev",
    "dev:admin": "cd apps/admin-app && npm run dev",
    "install:all": "npm install && cd tech-validation && npm install",
    "test": "cd tech-validation && npm run test:all",
    "lint": "cd tech-validation && npm run lint -- --max-warnings 600",
    "typecheck": "cd tech-validation && npm run typecheck",
    "verify-build": "ls -la api/ && ls -la tech-validation/dist/",
    "postinstall": "node scripts/install-binaries.js",
    "deploy:manual": "./scripts/manual-deploy.sh",
    "deploy:verify": "node scripts/verify-deployment.js",
    "check:all": "npm run typecheck && npm run lint && npm run deploy:verify"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@vercel/node": "^3.0.0",
    "axios": "^1.6.2",
    "dotenv": "^16.6.1",
    "uuid": "^9.0.0",
    "youtube-dl-exec": "^2.4.17"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/uuid": "^9.0.0",
    "typescript": "^5.0.0",
    "vercel": "^32.0.0"
  }
}
